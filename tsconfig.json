{
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ESNext",
		"target": "ES2017",
		"jsx": "react-jsx",
		"allowJs": true,
		"moduleResolution": "node",
		"types": ["@testing-library/jest-dom"],
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true,
		"baseUrl": ".",
		"paths": {
			"*": ["./src/*"]
		}
	},
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": [
		"./config/jest/setupTests.ts",
		"./src/**/*.ts",
		"./src/**/*.tsx",
		"./src/**/*.jsx",
		"./src/**/*.js"
	],
	"exclude": ["node_modules"]
}
